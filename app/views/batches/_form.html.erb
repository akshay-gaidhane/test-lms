<%= form_with(model: batch) do |form| %>
  <% if batch.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(batch.errors.count, "error") %> prohibited this batch from being saved:</h2>

      <ul>
        <% batch.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="mb-3">
    <%= form.label :name, class: 'form-label' %>
    <%= form.text_field :name, class: 'form-control' %>
  </div>

  <div class="mb-3">
    <%= form.label :start_time, class: 'form-label' %>
    <%= form.datetime_select :start_time, class: 'form-control' %>
  </div>

  <div class="mb-3">
    <%= form.label :end_time, class: 'form-label' %>
    <%= form.datetime_select :end_time, class: 'form-control' %>
  </div>

  <div class="mb-3">
    <%= form.label :every_day, class: 'form-label' %>
    <%= form.check_box :every_day, class: 'form-check-input' %>
  </div>

  <div class="mb-3">
    <%= form.label :course_id, class: 'form-label' %>
    <%= form.select :course_id, current_user.courses.map{|l| [l.name, l.id]} , {}, class: 'form-select form-select-lg mb-3' %>
  </div>

  <div class="actions">
    <%= form.submit class: "btn btn-primary" %>
  </div>
<% end %>
