<p id="notice"><%= notice %></p>

<h1>Enrollments</h1>

<table class="table">
  <thead>
    <tr>
      <th>Sender</th>
      <th>Batch</th>
      <th>Monitored by</th>
      <th>Status</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @enrollments.each do |enrollment| %>
      <tr>
        <td><%= Enrollment.user_email(enrollment.sender_id) %></td>
        <td><%= enrollment.batch.name %></td>
        <td><%= Enrollment.user_email(enrollment.monitored_by) %></td>
        <td><%= enrollment.status %></td>
        <td><%= link_to 'Show', enrollment %></td>
        <td><%= link_to 'Edit', edit_enrollment_path(enrollment) %></td>
        <td><%= link_to 'Destroy', enrollment, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Enrollment', new_enrollment_path %>
